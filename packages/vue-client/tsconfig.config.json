{
  "extends": ["@tsconfig/node18/tsconfig.json", "@vue/tsconfig/tsconfig.json"],
  "include": ["vite.config.*", "vitest.config.*", "cypress.config.*"],
  "compilerOptions": {
    "composite": true,
    "types": ["node"],
    "baseUrl": "..",
    "rootDir": "..",
    "paths": {
      "@/*": ["vue-client/src/*"],
      "@shared": ["./shared/src/index"], 
      "@shared/*": ["./shared/src/*"]
    },
    "verbatimModuleSyntax": false,
    "moduleResolution": "node",
  }
}

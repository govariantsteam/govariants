{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": "..",
    "rootDir": "..",
    "paths": {
      "@/*": ["vue-client/src/*"],
      "@ogfcommunity/variants-shared": ["./shared/src/index"]
    }
    ,
    "verbatimModuleSyntax": false,
    "moduleResolution": "node"
  }
}
